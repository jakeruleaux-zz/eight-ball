{{#if addNewAnswer}}
<h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="master">Name</label>
        {{input value=master id="master"}}
      </div>
      <div class="form-group">
        <label for="qreply">Reply</label>
        {{input value=qreply id="qreply"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
